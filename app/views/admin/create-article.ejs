<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/article.css"/>
        <link rel="stylesheet" href="/css/articles.css"/>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <%- include('../partials/admin-navbar'); %>
        <section class="page">
            <h1>Add Article</h1>
            <div class="article">
                <form method="POST" id="create-article" class="article-submit-form">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <textarea name="title" class="title" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input name="author" type="text" class="author" required />
                    </div>
                    <div class="form-group">
                        <label for="imageURL">Image URL:</label>
                        <textarea name="imageURL" class="imageURL" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">Content:</label>
                        <textarea name="content" class="content" required></textarea>
                    </div>
                    <button type="submit" class="submit">Submit</button>
                    <div id="error-message" class="error"></div>
                </form>
            </div>
        </section>
        <!--Footer -->
        <%- include('../partials/footer'); %>
    </body>
</html>
