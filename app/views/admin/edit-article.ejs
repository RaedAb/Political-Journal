<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/article.css"/>
        <link rel="stylesheet" href="/css/articles.css"/>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <%- include('../partials/admin-navbar'); %>
        <section class="page">
            <h1>Edit Article</h1>
            <div class="article">
                <form method="PATCH" id="edit-article" class="article-submit-form">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <textarea name="title" class="title" required><%= article.title %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input type="text" name="author" value="<%= article.author %>" class="author" required/>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image URL:</label>
                        <input type="text" name="imageUrl" value="<%= article.imageUrl %>" class="imageURL" required/>
                    </div>
                    <div class="form-group">
                        <label for="content">Content:</label>
                        <textarea name="content" class="content" required><%- article.content %></textarea>
                    </div>
                    <button type="submit" class="submit">Submit</button>
                    <div id="error-message" class="error"></div>
                </form>
            </div>
            <h2 style="padding: 10px">More Articles</h2>
            <%- include('../partials/admin-articles-container'); %>
        </section>
        <!--Footer -->
        <%- include('../partials/footer'); %>
    </body>
</html>
