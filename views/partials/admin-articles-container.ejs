<div class="articles" id="articles-container">
    <!-- Placeholder for Dynamically Loaded Articles in the format: -->
    <% articles.forEach((article) => { %>
    <div class="article-container">
        <button class="delete-article" data-article-id="<%= article._id %>">
            &#10006;
        </button>
        <img src="<%= article.imageUrl %>" alt="<%= article.title %>" />
        <a href="/articles/<%= article._id %>">
            <h5><%= article.title %></h5>
            <h6>Read More &rarr;</h6>
            <p>
                <%= article.author %> &#183; <%= new
                Date(article.date).toLocaleDateString('en-US', { month: 'short',
                day: '2-digit', year: 'numeric' }) %>
            </p>
        </a>
    </div>
    <% }); %>
    <a href="/admin/create-article" class="add-article">
        <img src="/images/plus.png">
    </a>
</div>
